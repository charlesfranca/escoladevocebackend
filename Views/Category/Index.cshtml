@model List<EscolaDeVoce.Services.ViewModel.CategoryViewModel>

@{
    ViewData["Title"] = "Categorias";
}

@section scripts {
    <script>
        $(document).ready(function() {
            $('#table').DataTable();
        });
    </script>
}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Categorias</h3>
  </div>
  <div class="panel-body">
    <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Ações</th>
            </tr>
        </tfoot>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.name</td>
                <td>
                    <a href="/category/detail/@category.Id"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a> | 
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
        </tbody>
    </table>

  </div>
</div>