@model EscolaDeVoce.Services.ViewModel.NewsViewModel

@{
    ViewData["Title"] = "Cadastro de noticia";
    Guid Id = Guid.Empty;
    
    if(Model != null){
      Id = @Model.Id;
    }
}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Cadastro de Noticias</h3>
  </div>
  <div class="panel-body">
    
    <!--action="/category/detail/@Model.Id" method="post"-->
    <form asp-controller="News" asp-action="Detail" asp-route-id="@Id" method="post">    
        <div class="form-group">
            @Html.LabelFor(m => m.title)
            @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.body)
            @Html.TextAreaFor(m => m.body, new { @class = "form-control", @rows="10" })
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>


