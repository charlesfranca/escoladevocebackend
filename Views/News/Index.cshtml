@model List<EscolaDeVoce.Services.ViewModel.NewsViewModel>

@{
    ViewData["Title"] = "Categorias";
}

@section scripts {
    <script>
        $(document).ready(function() {
            $('#table').DataTable();
        });
    </script>
}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Noticias</h3>
  </div>
  <div class="panel-body">
    <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Body</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Body</th>
                <th>Ações</th>
            </tr>
        </tfoot>
        <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <td>@news.Id</td>
                <td>@news.title</td>
                <td>@news.body</td>
                <td>
                    <a asp-action="Detail" asp-controller="News" asp-route-id="@news.Id"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a> | 
                    <a asp-controller="News" asp-action="Delete" asp-route-id="@news.Id"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
        </tbody>
    </table>

  </div>
</div>