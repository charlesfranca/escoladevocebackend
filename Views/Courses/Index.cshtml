@model List<EscolaDeVoce.Services.ViewModel.CourseViewModel>

@{
    ViewData["Title"] = "Cursos";
}

@section scripts {
    <script>
        $(document).ready(function() {
            $('#table').DataTable();
        });
    </script>
}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Cursos</h3>
  </div>
  <div class="panel-body">
    <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Views</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Views</th>
                <th>Ações</th>
            </tr>
        </tfoot>
        <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.name</td>
                <td>@course.views</td>
                <td>
                    <a asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a> | 
                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
        </tbody>
    </table>

  </div>
</div>